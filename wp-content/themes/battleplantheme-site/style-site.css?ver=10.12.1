html {
	font-size:									6.25%;
}

body {
	background:									#131a70/*medium blue*/;
}

body,
button,
input,
select,
optgroup,
textarea {
	color: 										#19208e/*text blue*/;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: 								Arial, Helvetica, sans-serif;; 
	color:										#323aad/*main blue*/;
	text-align:									left;
	font-weight:								bold;
}

.widget-title {
	color:										#ffffff;
	text-align:									center;
	text-shadow:								-1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 0 2px 0 #000;
}

/* Links
--------------------------------------------- */
a, a:visited {
	color: 										#323aad/*main blue*/;
}

a:hover,
a:active,
a.tab-focus {
	color: 										#131a70/*medium blue*/;
}

/* Forms
--------------------------------------------- */
label,
#secondary label {
	color:										#19208e/*text blue*/;
}

input[type="text"],
input[type="email"],
input[type="url"],
input[type="password"],
input[type="search"],
input[type="number"],
input[type="tel"],
input[type="range"],
input[type="date"],
input[type="month"],
input[type="week"],
input[type="time"],
input[type="datetime"],
input[type="datetime-local"],
input[type="color"],
textarea {
	color: 										#0f1556/*dark blue*/;
	background:									rgba(255,255,255,0.2);
	border: 									1px solid #0f1556/*dark blue*/;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="url"]:focus,
input[type="password"]:focus,
input[type="search"]:focus,
input[type="number"]:focus,
input[type="tel"]:focus,
input[type="range"]:focus,
input[type="date"]:focus,
input[type="month"]:focus,
input[type="week"]:focus,
input[type="time"]:focus,
input[type="datetime"]:focus,
input[type="datetime-local"]:focus,
input[type="color"]:focus,
textarea:focus,
.wpcf7 form .wpcf7-response-output {
	color: 										#0f1556/*dark blue*/;
	background:									#ffffff;
	border: 									1px solid #0f1556/*dark blue*/;
}

a.button,
a.page-numbers,
span.page-numbers,
button,
input[type="button"],
input[type="reset"],
input[type="submit"] {
	font-family: 								Arial, Helvetica, sans-serif;; 
	font-weight:								bold;	
	color:										#d6caa3/*light gold*/;
	background:									#323aad/*main blue*/;
	border:										2px solid #0f1556/*dark blue*/;	
	box-shadow:									0 4px 8px 0 rgba(0,0,0,0.35);	
}

a.button:hover,
a.page-numbers:hover,
span.page-numbers.current,
button:hover,
input[type="button"]:hover,
input[type="reset"]:hover,
input[type="submit"]:hover,
a.button.tab-focus,
a.page-numbers.tab-focus,
button.tab-focus,
input[type="button"].tab-focus,
input[type="reset"].tab-focus,
input[type="submit"].tab-focus,
a.button:active,
a.page-numbers:active,
button:active,
input[type="button"]:active,
input[type="reset"]:active,
input[type="submit"]:active {
    color: 										#ffffff;
	background: 								#0f1556/*dark blue*/;
	border:										2px solid #0f1556/*dark blue*/;	
	box-shadow:									0 4px 8px 0 rgba(0,0,0,0.35);	
}

span.wpcf7-spinner::before {
    color: 										#0f1556/*dark blue*/;
}

.wpcf7-not-valid-tip,
.required,
.required::after {
	color: 										red;
}

.wpcf7 form.invalid .wpcf7-response-output, 
.wpcf7 form.unaccepted .wpcf7-response-output {
    border-color: 								red;
}


/*--------------------------------------------------------------
# Components
--------------------------------------------------------------*/

/* Header
--------------------------------------------- */
.top-strip {
	padding-top:								80px;
	padding-bottom:								10px;
	background:									#ffffff;
}

.logo-strip {
    padding-top: 								10px;
    padding-bottom: 							10px;
	border-top:									2px solid #0f1556/*dark blue*/;
	border-bottom:								2px solid #0f1556/*dark blue*/;
	background:									linear-gradient(90deg, #0f1556/*dark blue*/ 20%, #323aad/*main blue*/ 45%, #323aad/*main blue*/ 55%, #0f1556/*dark blue*/ 80%);
}

.logo-line {
	padding-left:								423px;
	font-family: 								Arial, Helvetica, sans-serif;; 
	color: 										#131a70/*medium blue*/;
	text-align:									left;
	font-weight:								900;
	font-size:									60rem;
	line-height:								1;
}

.logo-line-2 {
	color:										#ffffff;
	font-size:									33rem;
	font-weight:								bold;
}

/* Content
--------------------------------------------- */
#masthead {
	background:									#ffffff;
	box-shadow:									0 5px 10px 0 rgba(0,0,0,0.5);
}

#wrapper-top {
	background:									#ffffff;
}

#wrapper-top .carousel:last-of-type {
	position: 									absolute;
	transform: 									scale(4,2);
	filter: 									blur(100px);
	z-index: 									-1;
}

#wrapper-top .carousel-inner {
   	padding-bottom: 							0;
}

#wrapper-top .header-img {
	border-right:								2px solid #0f1556/*dark blue*/;
	box-shadow:									0 4px 8px 0 rgba(0,0,0,0.5);
	margin: 									-50px calc((100vw - 715px) / 2);
}

#wrapper-content {
	background:									linear-gradient(90deg, #9d8b56/*dark gold*/ 10%, #d6caa3/*light gold*/ 40%, #d6caa3/*light gold*/ 60%, #9d8b56/*dark gold*/ 90%);
	z-index:									11000;
	padding-top:								20px;
	box-shadow:									inset 0 5px 10px 0 rgba(0,0,0,0.5);
}

	.home #wrapper-content {
		border-top:									2px solid #9d8b56/*dark gold*/;
		box-shadow:									0 -5px 10px 0 rgba(0,0,0,0.5);
	}

.sidebar-left.sidebar-box #main-content {
	grid-template-columns: [column-1-start] minmax(0,300px) [column-1-end column-2-start] 1fr [column-2-end];
    gap: 										0 4%;
}

.sidebar-box #secondary {
	margin-top:									-216px;
    border: 									none;
    background: 								none;
	padding-left:								0;
	padding-right:								0;
}

	.home.sidebar-box #secondary {
		margin-top:									-734px;
	}

.officer .block-text {
	margin-top:									-1.2em;
	text-align:									center;
}

.officer-name {
	margin:										10px 0 5px;
	font-weight:								bold;
	color:										#19208e/*text blue*/;
	padding:									0 5px;
	line-height:								1.2;
}

.officer-position {
	font-style:									italic;
	font-size:									85%;
	color:										#19208e/*text blue*/;
	padding:									0 5px;
}

/* Widgets
--------------------------------------------- */
#secondary .widget.widget-topper {
    width: 										calc(100% + 160px) !important;
    max-width: 									calc(100% + 160px) !important;
    margin-left: 								-80px;
    margin-top: 								-60px;
	position:									relative;
	z-index:									99999;
	filter:										drop-shadow(0 10px 8px rgba(0,0,0,0.5));
}

.widget:not(.widget-topper) {
	background:									linear-gradient(90deg, #0f1556/*dark blue*/ 0%, #323aad/*main blue*/ 100%);
    border-left:								2px solid #0f1556/*dark blue*/;
	border-right:								2px solid #0f1556/*dark blue*/;
	margin: 									-10px 0 0;
	box-shadow:									0 10px 10px 0 rgba(0,0,0,0.5);
	padding-left:								1.5em;
	padding-right:								1.5em;
}

.widget.widget-navigation {
	margin-top:									-300px;
	padding-top:								280px; /* orients border behind the logo symbol */
}

.widget-filler {
	border-bottom:								2px solid #0f1556/*dark blue*/;
	position:									relative;
	z-index:									99999;
}

.sidebar-box .widget.widget-last {
	margin-bottom: 								0;
}

/* Sections
--------------------------------------------- */
.section[class*="style-"] {
	padding-top:								2em;
	padding-bottom:								2em;
}

.section.style-1 {
	background:									#cccccc;
}

.section.style-2 {
	background:									#b2b2b2;
}

/* Footer
--------------------------------------------- */
#colophon {
	border-top:									2px solid #0f1556/*dark blue*/;
	border-bottom:								2px solid #0f1556/*dark blue*/;
	background:									linear-gradient(90deg, #0f1556/*dark blue*/ 20%, #323aad/*main blue*/ 45%, #323aad/*main blue*/ 55%, #0f1556/*dark blue*/ 80%);
	margin-top:									-80px;
	box-shadow:									0 -4px 8px 0 rgba(0,0,0,0.35);
	z-index:									99999;
}

.site-info {
	color:										#d6caa3/*light gold*/;
}

.site-info a {
	color:										#d6caa3/*light gold*/;
}

.site-info a:hover,
.site-info a:active,
.site-info a.tab-focus {
	color:										#ffffff; 
}

#colophon .block-text {
	max-width:									800px;
	text-align:									center;
	margin:										0 auto;
}

#colophon .disclaimer {
	font-size:									12px;
	padding:									0 10%;
}

/* Icons & Social Media
--------------------------------------------- */
.icon i.fa {
	color: 										rgba(0,0,0,0.75);
	font-size:									40px;
	background:									rgba(0,0,0,0.15);
	border-radius:								50%;
}

.social-button {
	width:										60px;
	height:										60px;
}

.social-button i.fa {
	color: 										rgba(0,0,0,0.75);
}

.social-button i.fa::before {
	font-size:									34px;
}

.social-button:hover i.fa {
	color: 										rgba(0,0,0,1);
	transition:									all 0.2s ease;
}

.social-button .social-bg {
	border-radius:								50%;
	background:									rgba(0,0,0,0.15);
}

.social-button:hover .social-bg {
	background:									rgba(0,0,0,0.3);
	transition:									all 0.2s ease;
}


/* Site Navigation
--------------------------------------------- */

/* Main Menu */
.widget-navigation ul {
	font-family:								Arial, Helvetica, sans-serif;;
	font-size:									24px;
	font-weight:								bold;
}

.widget-navigation a {
	background: 								transparent;
	border:										none;
	padding:									12px 0;
	color:										#af9f6e/*medium gold*/;
	text-align:									left;
}

.widget-navigation ul.menu li:hover > a, 
.widget-navigation ul.menu li.active > a, 
.widget-navigation ul.menu li > a.tab-focus {    
	color: 										#ffffff;
	background: 								transparent;
	border:										none;
}

/* Magic Line Menu */
#magic-line {
	margin-left:								-6px;
	width:										300px;
	height: 									44px; 
	background: 								#0f1556/*dark blue*/;
	box-shadow:									none;
}

/* Mobile Menu */
#mobile-navigation {
	background:									linear-gradient(90deg, #323aad/*main blue*/ 0%, #0f1556/*dark blue*/ 100%);
}

#mobile-navigation li a {
	color: 										#af9f6e/*medium gold*/;
	text-align:									left;
	font-weight:								bold;
	background:									transparent;
}

#mobile-navigation ul.main-menu li:hover > a, 
#mobile-navigation ul.main-menu li.active > a {    
    color: 										#ffffff;
	background: 								#0f1556/*dark blue*/;
}

.side-push #mobile-navigation {
	border-left: 								2px solid #0f1556/*dark blue*/;
}

/* Posts & Comment Navigation */
span.page-numbers.current {
	background: 								rgba(0,0,0,0.35);
}

span.page-numbers.dots {
	color:										rgba(0,0,0,0.8);
}

/* Media
--------------------------------------------- */
#primary img, 
#wrapper-top img, 
#wrapper-bottom img, 
iframe {
	background: 								#0f1556/*dark blue*/;
	border:										2px solid #0f1556/*dark blue*/;
	box-shadow:									0 4px 8px 0 rgba(0,0,0,0.5);
}

img.img-404 {
  	filter: 									sepia(1) contrast(1.5) brightness(0.65) hue-rotate(0deg) drop-shadow(-1px -1px 0 rgba(0,0,0,.3)) drop-shadow(1px 1px 0 rgba(255,255,255,.3));
}

/*--------------------------------------------------------------
# Mobile Styles
--------------------------------------------------------------*/

/* Desktops */
@media only screen and (min-width: 1025px) { 
}

/* 4: Large Tablets (landscape) */
@media (max-width: 1280px) {
	/* Headeline font basis */
	html {
		font-size:									5.0%;
	}
}

/* 3: Small Tablets (landscape) */
@media (max-width: 1024px) {
	/* Headeline font basis */
	html {
		font-size:									4.50%;
	}
	
	/* Header */
	.logo {
		max-width: 									280px;
	}
	
	.top-strip {
		padding-top:								0;
	}

	.logo-line {
		padding-left:								0;
		text-align:									center;

	}
	
	/* Content */
	#wrapper-top .header-img {
		padding-left: 								0;
	}
	#content {
		padding-bottom:								60px;
	}
	
	#secondary {
		display:									none;
	}
	
	#wrapper-top .header-img {
		margin: -50px auto;
	}
	
	/* Footer */
	#colophon {
		margin-top: 								0;
	}
}

/* 2: Phones (landscape) + Tablets (portrait) */
@media (max-width: 860px) {
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-align:									center;
	}

/* 1: Phones (portrait) */
@media (max-width: 576px) {
	/* Headeline font basis */
	html {
		font-size:									4.0%;
	}
	

